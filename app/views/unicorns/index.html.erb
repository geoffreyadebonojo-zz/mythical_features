<p id="notice"><%= notice %></p>

<h1>Unicorns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Is white</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unicorns.each do |unicorn| %>
      <tr>
        <td><%= unicorn.name %></td>
        <td><%= unicorn.color %></td>
        <td><%= unicorn.is_white? %></td>
        <td><%= link_to 'Show', unicorn %></td>
        <td><%= link_to 'Edit', edit_unicorn_path(unicorn) %></td>
        <td><%= link_to 'Destroy', unicorn, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unicorn', new_unicorn_path %>
